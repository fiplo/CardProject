<!DOCTYPE html>
<html>
  <head>
    <%- include('../partial/head.ejs') %>
  </head>
  <body>
    <div class="container">
      <div class="page-header text-center">
        <h1>
          <span class="fa fa-sign-in"></span> vartotojo <%= user.local.fullname
          %> redagavimas
        </h1>
      </div>
      <button
        class="btn btn-secondary"
        type="submit"
        onclick="locatioin.href =
            '/users'"
      >
        Gryžti atgal į vartotojų puslapį
      </button>
      <hr class="my-4" />
      <div class="col-sm-6 col-sm-offset-3">
        <h1>Edit User</h1>
        <form action="/users/update/<%= user._id%>" method="post">
          <table>
            <tbody>
              <tr>
                <td>Name</td>
                <td>
                  <input
                    type="text"
                    name="name"
                    value="<%= user.local.fullname %>"
                  />
                </td>
              </tr>

              <tr>
                <td>Email</td>
                <td>
                  <input
                    type="text"
                    name="email"
                    value="<%= user.local.email %>"
                  />
                </td>
              </tr>
              <tr>
                <td colspan="2"><button type="submit">Update</button></td>
              </tr>
            </tbody>
          </table>
        </form>
      </div>
    </div>
  </body>
</html>
