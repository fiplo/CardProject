<!DOCTYPE html>
<html>

<head>
    <%- include('../partial/head.ejs') %>
</head>

<body>
    <div class="container text-center">
        <div class="page-header text-center">
            <h1><span class="fa fa-anchor"></span> Kortų katalogas</h1>
        </div>

        <% if (user !== owner) {%>
            <div class="page-header text-center">
                <h2>Savininkas: <%= owner.local.fullname %></h2>
            </div>
        <% }%>

              <a class="card-text" href="/trade/<%= owner._id %>"
                >Keistis kortomis</a
              >
    </div>
    <div class="container p-3 my-3">
        <div class="row">
            <% cards.forEach(function(card) {%>
                <div class="col-md-4" style="padding-top:10px;padding-bottom:10px">

                    <div class="card md-4 shadow-sm" >
                        <img class="card-img-top" src="<%= card.card.imageUrl %>" width="auto"
                        max-height="255" preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                        <div class="card-body">
                            <h3 class="card-text">
                                <%= card.card.name %>
                            </h3>
                            <p class="card-text">
                            <strong>Kokybė</strong>: <%= card.condition %>
                            </p>
                            <p class="card-text"><strong>Aprašas:</strong><%= card.desc %></p>
                            <p class="card-text">
                            <a href="/cards/show/<%= card.card.id %>">Atidaryti kortos puslapį</a>
                            </p>
                            <% if(private) {%>
                            <button type="button" class="btn btn-success"
                                onclick="location.href ='/cards/comment/<%= card.card._id %>'">Komentuoti</button>
                            <% } %>



                        </div>
                    </div>
                </div>

                <% }) %>
        </div>
        <hr class="my-4">
    </div>

</body>

</html>
